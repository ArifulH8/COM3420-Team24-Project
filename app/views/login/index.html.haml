%html{:lang => "en"}
  %head
  !!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title Login
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap", :rel => "stylesheet"}/
    = javascript_pack_tag "login_btn"
  %body-1
    %section.ftco-section


      .container.animate__animated.animate__flipInX
        .row.justify-content-center
          .col-md-6.text-center.mb-5
            %h2.heading-section ECF Login
        .row.justify-content-center
          .col-md-6.col-lg-4
            .login-wrap.py-5
              .img
              %h3.text-center.mb-0 Welcome
              %form.login-form{:action => "#"}
                .form-group
                  .icon.d-flex.align-items-center.justify-content-center
                    %span.fa.fa-user
                  %input.form-control#username{:placeholder => "Username", :required => "", :type => "text", :value =>""}/
                .form-group
                  .icon.d-flex.align-items-center.justify-content-center
                    %span.fa.fa-lock
                  %input.form-control#password{:placeholder => "Password", :required => "", :type => "password"}/
                .form-group.d-md-flex
                  .w-100.text-md-right
                    %a{:href => "#"} Forgot Password
                .form-group
                  %button.btn.form-control.btn-primary.rounded.submit.px-3.btn_effect_shakeY#btn{:type => "submit"} Login
              .w-100.text-center.mt-4.text
                %p.text-center Please use your University MUSE credentials.
